<h2>あなたの注文履歴です</h2>

<% if @order_products.blank? %>
  <h2>注文履歴はありません</h2>
<% else %>


<table class='table table-stripe'>
  <thead>
    <tr>
      <th>注文日</th>
      <th>注文内容</th>
      <th>合計金額</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% current_user_order.each do |order| %>
        <% total_price = 0 %>
        <td><%= order.created_at %></td>
        <td>
        <% order.order_products.each do |order_product| %>
          [商品名:<%= Product.find(order_product.)]
      </td>
    </tr>
  </tbody>
