<h2><%= @product.name %></h2>
<%= form_with(model: @product,url: add_item_path(product_id: @product.id)) do |f| %>
  <table class='table table-striped'>
    <thead>
      <tr>
        <th>商品画像</th>
        <th>商品価格</th>
        <th>個数</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td text-align:center;><img height='400' src='<%= h @product.picture %>' alt='logo.jpg'/></td>
        <td><%= @product.price %>円</td>
        <td><%= f.number_field :quantity,value: 1,class: 'form-control',min: 1 %></td>
        <td><%= f.hidden_field :product_id,value: @product.id %></td>
        <td><%= f.submit 'カートに入れる',class: 'btn btn-success' %></td>
      </tr>
    </tbody>
  </table>
<% end %>
<% if @favorite.present? %>
  <%= link_to 'お気に入りを解除する',favorite_path(id: @favorite.id), method: :delete,class: 'btn btn-danger' %>
<% else %>
  <%= link_to 'お気に入りする',favorites_path(product_id: @product.id),method: :post,class: 'btn btn-primary' %>
<% end %>
