<h2>商品一覧</h2>
<div>
  <%= form_with(url:products_path,local: true,method: :get) do |form| %>
    <%= form.label :name,'検索' %>
    <%= form.text_field :name,value: params[:name] %>
    <%= form.submit 'Search' %>
  <% end %>
</div>
<table class='table table-striped'>
  <thead>
    <tr>
      <th>商品画像</th>
      <th>商品名</th>
      <th>商品価格</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
     <tr>
       <td text-align:center;><img height='80' src='<%= h product.picture %>'/></td>
       <td><%= link_to product.name,product %></td>
       <td><%= product.price %>円</td>
       <% if current_user.admin? %>
          <td><%= link_to "編集", edit_product_path(product),class: 'btn btn-xs btn-primary' %></td>
          <td><%= link_to "削除", product_path(product.id), method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: '商品を削除してよろしいですか？'}%></td>
       <% end %>
     </tr>
   <% end %>
  </tbody>
</table>
<%= paginate @products %>
